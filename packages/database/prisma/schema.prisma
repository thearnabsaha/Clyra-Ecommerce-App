generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vendor {
  id          Int        @id @default(autoincrement())
  email       String     @unique
  name        String
  password    String
  products    Products[]
  time        DateTime   @default(now())
}
model Category {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  products  Products[]  @relation("ProductCategories")
}

model Products {
  id          String        @id @default(uuid()) @unique
  title       String
  brand       String
  description String
  image       String?
  price       Int
  userId      Int
  StockAmount Int
  user        Vendor        @relation(fields: [userId], references: [id])
  categories  Category[]    @relation("ProductCategories")
  carts       Cart[]      @relation("ProductInCarts")
  time        DateTime      @default(now())
}

model Customer {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  firstname  String
  lastname   String
  password   String
  cart       Cart[]
  time       DateTime  @default(now())
}

model Cart {
  id          String      @id @default(uuid()) @unique
  userId      Int
  user        Customer    @relation(fields: [userId], references: [id])
  products    Products[]  @relation("ProductInCarts")
  time        DateTime    @default(now())
}